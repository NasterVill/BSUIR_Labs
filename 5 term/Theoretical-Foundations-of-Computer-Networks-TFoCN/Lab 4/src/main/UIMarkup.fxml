<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="720.0"
        prefWidth="400.0"
        spacing="10.0"
        xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="main.Controller"
>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
   </padding>
   <children>
      <Label text="Input Area" />
      <TextArea
              fx:id="inputArea"
              prefHeight="130.0"
              prefWidth="372.0"
              promptText="Please enter your text here..."
              wrapText="true"
      />
      <Button
              fx:id="sendButton"
              onAction="#onSend"
              mnemonicParsing="false"
              prefHeight="25.0"
              prefWidth="408.0"
              text="Send"
      />
      <Separator prefWidth="200.0" />
      <Label text="Output Area" />
      <TextArea
              fx:id="outputArea"
              editable="false"
              prefHeight="180.0"
              prefWidth="372.0"
              promptText="The output will be shown here..."
              wrapText="true"
      />
      <Separator prefWidth="200.0" />
      <Label text="Debug Area" />
      <TextArea
              fx:id="debugArea"
              editable="false"
              prefHeight="180.0"
              prefWidth="372.0"
              promptText="The debugging info will be shown here..."
              wrapText="true"
      />
      <Separator prefWidth="200.0" />
      <Button
              fx:id="clearButton"
              onAction="#onClear"
              mnemonicParsing="false"
              prefHeight="25.0"
              prefWidth="408.0"
              text="Clear"
      />
   </children>
</VBox>
